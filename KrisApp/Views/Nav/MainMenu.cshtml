@model KrisApp.Models.Nav.MenuModel

<ul class="nav navbar-nav nav-pills">
    @foreach (var item in Model.MenuItems)
    {
        <li class="dropdown @(item.Active ? "active" : "null")">
            @if (item.SubMenu?.Count > 0)
            {
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    @item.Text<span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    @foreach (var subMenuItem in item.SubMenu)
                    {
                        <li>@Html.MenuItemLink(subMenuItem)</li>
                    }
                </ul>
            }
            else
            {
                @Html.ActionLink(item.Text, item.Action, item.Controller)
            }
        </li>
    }
</ul>

