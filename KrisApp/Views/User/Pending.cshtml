<div>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PendingUserRequests[0].UserRequest.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PendingUserRequests[0].UserRequest.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PendingUserRequests[0].UserRequest.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PendingUserRequests[0].UserRequest.AddDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.PendingUserRequests)
        {
            Html.RenderPartial("_UserRequest", item);

        }

    </table>
</div>