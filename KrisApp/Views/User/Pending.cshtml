@model KrisApp.Models.User.UsersPendingModel

@{
    ViewBag.Title = "Oczekujący użytkownicy";
    ViewData.TemplateInfo.HtmlFieldPrefix = "";
}

<h2>@ViewBag.Title</h2>

@*<div>
    <hr />

    @{ Html.RenderPartial("_UserRequests", model: Model.PendingUserRequests); }
