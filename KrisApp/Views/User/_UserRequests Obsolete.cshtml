@model IEnumerable<KrisApp.DataModel.Users.UserRequest>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Password)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Ghost)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddDate)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Ghost)
        </td>*@
        <td>
            @Html.ActionLink("Akceptuj", "AcceptRequest", routeValues: new { id=item.Id }, htmlAttributes: new { @class = "btn btn-success" }) 
            @Html.ActionLink("Odrzuć", "RejectRequest", routeValues: new { id=item.Id }, htmlAttributes: new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>